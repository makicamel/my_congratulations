<%= form_with url: home_index_path, method: :get, local: true do |f| %>
  <%= tag.p do %>
    from: <%= f.text_field :from, value: '渋谷' %>
  <% end %>
  <%= tag.p do %>
    transfer: <%= f.text_field :transfer, value: '恵比寿（東京）' %>
  <% end %>
  <%= tag.p do %>
    to: <%= f.text_field :to, value: '新宿' %>
  <% end %>
  <%= f.submit 'search' %>
<% end %>

<% @blocks.each do |block| %>
  <%= tag.p do %>
    <%= "#{block[:departure_station]} → #{block[:transfer_station]} → #{block[:arrive_station]}" %>
  <% end %>
  <%= tag.p block[:time] %>
  <%= tag.p do %>
    <%= "#{block[:first_route]} / #{block[:second_route]}" %>
  <% end %>
<% end %>
